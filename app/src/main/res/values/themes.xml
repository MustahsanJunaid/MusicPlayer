<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorYoutube</item>
        <item name="colorPrimaryDark">@color/colorYoutubeDark</item>
        <item name="colorPrimaryVariant">@color/colorYoutubeDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!--        <item name="android:fontFamily">@font/lato</item>-->
    </style>

    <style name="Theme.MusicPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MusicPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusicPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textNormal</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="Text">
        <item name="android:layout_height">46dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/ripple_primary</item>
    </style>

    <style name="Button.Positive">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/ripple_primary</item>
    </style>

    <style name="Button.Negative">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorYoutube</item>
        <item name="android:background">@drawable/ripple_negative</item>
    </style>
</resources>